@model DDAC_Maersk.ViewModel.SSCViewModel

@{
    ViewBag.Title = "SelectContainer";
}

<h2>SelectContainer</h2>

<table class="table">
    <tr>
        <th>
            Schedule ID
        </th>
        <th>
            Schedule Origin
        </th>
        <th>
            Schedule Destination
        </th>
        <th>
            Schedule Departure Time
        </th>
        <th>
            Schedule Arrival Time
        </th>
    </tr>
    <tr>
        <td>
            @Model.Schedule.ScheduleID
        </td>
        <td>
            @Model.Schedule.Origin
        </td>
        <td>
            @Model.Schedule.Destination
        </td>
        <td>
            @Model.Schedule.DepatureTime
        </td>
        <td>
            @Model.Schedule.ArrivalTime
        </td>
    </tr>
</table>

<table class="table">
    <tr>
        <th>
            Ship ID
        </th>
        <th>
            Ship Name
        </th>
        <td>
            Ship Container Number
        </td>
    </tr>
    <tr>
        <td>
            @Model.Ship.ShipId
        </td>
        <td>
            @Model.Ship.ShipName
        </td>
        <td>
            @Model.Ship.ShipContainerNumber
        </td>
    </tr>
</table>

<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Email
        </th>
        <th>
            ContactNumber
        </th>
    </tr>
    <tr>
        <td>
            @Model.Customer.Name
        </td>
        <td>
            @Model.Customer.Email
        </td>
        <td>
            @Model.Customer.ContactNumber
        </td>
    </tr>
</table>


@using (Html.BeginForm("CreateBooking", "Order"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>New Container</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Container.TypeOfContainer, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Container.TypeOfContainer, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Container.TypeOfContainer, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Container.WeightofContainer, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Container.WeightofContainer, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Container.WeightofContainer, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.HiddenFor(m => m.Schedule.ScheduleID)
        @Html.HiddenFor(m => m.Customer.CustomerID)
        @Html.HiddenFor(m => m.Container.ContainerID)
        @Html.HiddenFor(m => m.Ship.ShipId)
        @Html.HiddenFor(m => m.Order.OrderID)


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create Booking" class="btn btn-default" />
            </div>
        </div>
    </div>
}

