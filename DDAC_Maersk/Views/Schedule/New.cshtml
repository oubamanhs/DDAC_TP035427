@model DDAC_Maersk.Models.Schedule
@{
    ViewBag.Title = "New";
}

<h2>New Schedule</h2>

@using (Html.BeginForm("Create", "Schedule"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Origin)
        @Html.TextBoxFor(m => m.Origin, new { @class = "form-control" })
        @*@Html.ValidationMessage()*@
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Destination)
        @Html.TextBoxFor(m => m.Destination, new { @class = "form-control" })

    </div>

    <div class="form-group input-group date bootstrap-datetimepicker-widget">
        @Html.LabelFor(m => m.DepatureTime)
        @Html.TextBoxFor(m => m.DepatureTime, new { id = "datetimepicker6", @class = "form-control" })

    </div>

    <div class="form-group input-group date bootstrap-datetimepicker-widget">
        @Html.LabelFor(m => m.ArrivalTime)
        @Html.TextBoxFor(m => m.ArrivalTime, new { id = "datetimepicker7", @class = "form-control" })
    </div>

    @Html.HiddenFor(m => m.ScheduleID)

    <button type="submit">Submit</button>
}


@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">
        $(function () {
            $('#datetimepicker6').datetimepicker();
            $('#datetimepicker7').datetimepicker({
                useCurrent: false //Important! See issue #1075
            });
            $("#datetimepicker6").on("dp.change", function (e) {
                $('#datetimepicker7').data("DateTimePicker").minDate(e.date);
            });
            $("#datetimepicker7").on("dp.change", function (e) {
                $('#datetimepicker6').data("DateTimePicker").maxDate(e.date);
            });
        });
    </script>
}




